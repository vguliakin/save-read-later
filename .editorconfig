root = true

[*]
indent_style = space              # Use spaces for indentation
indent_size = 2                   # Set indentation size to 2 spaces (common in JS projects)
end_of_line = lf                  # Use LF (line feed) as the line ending
charset = utf-8                   # Use UTF-8 character encoding
trim_trailing_whitespace = true   # Remove trailing whitespace
insert_final_newline = true       # Ensure files end with a newline

[*.md]
trim_trailing_whitespace = false  # Don't trim trailing whitespace in Markdown files

[*.json]
indent_size = 2                   # Keep JSON files consistent with 2-space indentation

[*.html]
indent_style = space              # Use spaces for indentation
indent_size = 2                   # Maintain 2-space indentation for HTML

[*.css, *.scss]
indent_style = space              # Use spaces for indentation in CSS/SCSS files
indent_size = 2                   # Set indentation size to 2 spaces

[*.yml, *.yaml]
indent_style = space              # Use spaces for YAML files
indent_size = 2                   # Maintain 2-space indentation

[*.jsx, *.tsx]
indent_style = space              # Use spaces for JSX/TSX files
indent_size = 2                   # Set 2-space indentation for better readability